<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    <style name="AppHeader.Title">
        <item name="android:fontFamily">@font/sf_pro_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    <style name="AppHeader.Subtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
    </style>
    <style name="StandardBtn">
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">@font/sf_pro_medium</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:radius">6dp</item>
    </style>
    <style name="StandardBtn.Primary">
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">#1B74E4</item>
    </style>
    <style name="StandardBtn.Secondary">
        <item name="android:textColor">#050505</item>
        <item name="backgroundTint">#E4E6EB</item>
    </style>
    <style name="StandardBtn.Upload">
        <item name="android:textColor">#1763CF</item>
        <item name="backgroundTint">#E7F3FF</item>
    </style>
    <style name="DivisionLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#f2f2f2</item>
    </style>
    <style name="BtnContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SectionTitle">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sf_pro_medium</item>
    </style>
</resources>
